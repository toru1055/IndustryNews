<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <TextView
                android:id="@+id/textViewIndustry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Industry"
                android:layout_margin="2dp"
                android:background="#0000ff"
                android:padding="2dp"
                android:textColor="@color/abc_primary_text_material_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PubDate"
                android:id="@+id/textViewPubDate"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="2dp"
                android:layout_margin="2dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/textViewIndustry"
                android:background="@color/button_material_light"
                android:id="@+id/viewLine"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/textViewTitle1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewLine"
                android:text="T"
                android:textIsSelectable="false"
                android:textSize="48dp"
                android:textAlignment="center"
                android:background="@android:color/holo_blue_bright"
                android:textColor="@color/abc_primary_text_material_light"
                android:layout_margin="2dp" />


            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="itle"
                android:textIsSelectable="false"
                android:textSize="24dp"
                android:layout_alignTop="@+id/textViewTitle1"
                android:layout_toRightOf="@+id/textViewTitle1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/abc_primary_text_material_light"/>

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_below="@+id/textViewTitle"
                android:layout_toRightOf="@+id/textViewTitle1"
                android:layout_alignRight="@+id/textViewSubscription"
                android:layout_alignEnd="@+id/textViewSubscription"
                android:textSize="12dp"
                android:textColor="@color/abc_secondary_text_material_light"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Subscription)"
                android:id="@+id/textViewSubscription"
                android:layout_below="@+id/textViewDescription"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="14dp"/> "/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>